{
  "extends": "stylelint-config-standard",
  "rules": {
    "string-quotes": "single",
    "value-keyword-case": null,
    "declaration-block-trailing-semicolon": "always",
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "composes"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ]
  }
}